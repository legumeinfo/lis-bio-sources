<?xml version="1.0"?>
<classes>

  <!-- not all proteins are associated with a gene family -->
  <!-- primary transcript proteins are loaded from protein_primary.faa files -->
  <class name="Protein" is-interface="true">
    <attribute name="isPrimary" type="java.lang.Boolean"/>
    <attribute name="geneFamilyScore" type="java.lang.Double"/>
    <attribute name="geneFamilyScoreMeaning" type="java.lang.String"/>
    <reference name="geneFamily" referenced-type="GeneFamily" reverse-reference="proteins"/>
  </class>

  <!-- primary transcripts are loaded from mrna_primary.fna files -->
  <class name="MRNA" is-interface="true">
    <attribute name="isPrimary" type="java.lang.Boolean"/>
  </class>

  <!-- primary transcript CDSes are loaded from cds.fna files -->
  <class name="CDS" is-interface="true">
    <attribute name="isPrimary" type="java.lang.Boolean"/>
  </class>

  <!-- not all genes are associated with a gene family or pathway -->
  <class name="Gene" is-interface="true">
    <attribute name="geneFamilyScore" type="java.lang.Double"/>
    <attribute name="geneFamilyScoreMeaning" type="java.lang.String"/>
    <reference name="geneFamily" referenced-type="GeneFamily" reverse-reference="genes"/>
    <collection name="pathways" referenced-type="Pathway" reverse-reference="genes"/>
  </class>

  <class name="Pathway" is-interface="true" >
     <attribute name="identifier" type="java.lang.String"/>
     <attribute name="name" type="java.lang.String"/>
     <collection name="genes" referenced-type="Gene" reverse-reference="pathways"/>
     <collection name="dataSets" referenced-type="DataSet"/>
  </class>
  
</classes>
